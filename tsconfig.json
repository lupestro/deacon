{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "noEmit": true,
    "sourceMap": true,
    "baseUrl": ".",
    "module": "es6",
    "paths": {
      "deacon/tests/*": ["tests/*"],
      "deacon/*": [
        "app/*"
      ]
    }
  },
  "exclude": [
    "tmp",
    "dist",
    "node_modules",
    "bower_components"
  ]
}
